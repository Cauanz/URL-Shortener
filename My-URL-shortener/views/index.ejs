<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
   <title>Principal</title>
</head>
<body>
   <div class="container">
      <h1>URL Smasher</h1>

      <form action="/shortUrls" method="POST" class="my-4 form-inline">
   
         <label for="fullUrl" class="sr-only">
            Full URL
            <input type="url" name="fullUrl" id="fullUrl" placeholder="Url...." required class="form-control mr-2 col">
         </label>
   
         <button type="submit" class="btn btn-success">Encurtar</button>
      </form>
   
      <table class="table table-striped table-responsive">
         <thead>
            <tr>
               <th>Full URL</th>
               <th>Short URL</th>
               <th>Clicks</th>ðŸ˜Š 
            </tr>
         </thead>
         <tbody>
            <% shortUrls.forEach(url => { %>
               <tr>
                  <td>
                     <a href="<%= url.full %>"><%= url.full %></a>
                  </td>
                  <td>
                     <a href="<%= url.short %>"><%= url.short %></a>
                  </td>
                  <td><%= url.clicks %></td>
               </tr>
            <% }); %>
         </tbody>
      </table>
   </div>
</body>
</html>